  <body>
    <!--  Navigation -->
    <nav class="navigation navbar navbar-expand-lg navbar-inverted">
      <style>
        .carousel-control.left, .carousel-control.right {
    background-image: none
}
      body {
        background-color: rgb(36, 38, 41);
        color: white;
      }

      h1 {
        color: white !important;
      }
      </style>
        <div class="container" style="text-align: center;">
     <a class="navbar-brand nav-tags " href="/">{{plog.user.username}}</a>
        <a class="navbar-brand nav-tags " href="/">@{{plog.location}} </a>
                </p>
        </div>
        
    </nav>

<div id="myCarousel" class="carousel slide" data-ride="carousel" >
<ol class="carousel-indicators">
    {{#each plog.photos}}
        <li data-target="#myCarousel" data-slide-to="{{@index}}"
        {{#if @first}} class="active" {{/if}} />
    {{/each}}
    </ol>

    <div class="carousel-inner" role="listbox">
        {{#each plog.photos}}

        {{#if @first}}
            <div class="item active">
        {{else}}
            <div class="item">
        {{/if}}
            <a href="#">
                <img src="{{this.url}}" class="img-rounded img-responsive center-block"
                  style="height:600px"
                  alt="{{ this.title }}">
            </a>
            <div class="carousel-caption">
                <h3> {{ this.title }} </h3>

            </div>

        </div>
        {{/each}}
    </div>

    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
    <!-- Content -->
    <section class="py-5">
      <div class="container">
        <h1 class="text-center video-text">{{plog.title}} </h1>
          
        <p style="text-align: center;">{{plog.message}}</p>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-5 footer">
      <div class="container">
        <p class="m-0 text-center footer-text"> &copy; <a href="#"> Plog </a> </p>
      </div>
